{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/base_contract.schema.json",
  "title": "BaseContract",
  "type": "object",
  "required": ["contract_id", "meta", "clauses"],
  "properties": {
    "contract_id": { "type": "string" },
    "meta": {
      "type": "object",
      "required": ["hotel", "sign_date", "currency", "source_file"],
      "properties": {
        "hotel": { "type": "string" },
        "sign_date": { "type": "string", "format": "date" },
        "currency": { "type": "string" },
        "source_file": { "type": "string" }
      }
    },
    "clauses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "title", "effective_from", "confidence"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "Pricing", "Season", "Blackout", "Allotment", "Cutoff",
              "Cancellation", "NoShow", "Surcharge", "Tax", "StopSell",
              "Promotion", "Payment", "Other"
            ]
          },
          "title": { "type": "string" },
          "scope": { "type": ["object", "null"] },
          "season": { "type": ["array", "null"] },
          "blackout": { "type": ["array", "null"] },
          "table": { "type": ["array", "null"] },
          "policy": { "type": ["object", "null"] },
          "text": { "type": ["string", "null"] },
          "effective_from": { "type": "string", "format": "date" },
          "effective_to": { "type": ["string", "null"], "format": "date" },
          "source_anchor": { "type": ["object", "null"] },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
} 